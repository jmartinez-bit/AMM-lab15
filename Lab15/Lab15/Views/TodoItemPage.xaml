<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab15.Views.TodoItemPage">
    <ContentPage.Content>
        <StackLayout Margin="20">

            <Label Text="Ubication"/>
            <Entry Text="{Binding Path=ubication}" Placeholder="Enter ubication"/>

            <Label Text="Telephone"/>
            <Entry Text="{Binding Path=telephone}" Placeholder="Enter Telephone"/>

            <Label Text="Specialization Quantity"/>
            <Entry Text="{Binding Path=specializationQuantity}" Placeholder="Enter Specialization quantity"/>

            <DatePicker Date="{Binding Path=createDate}"/>
            <!--<Switch IsToggled="{Binding Path=Done}"/>-->

            <Button Text="Save"
                    Clicked="OnSaveButtonClicked" />
            <Button Text="Delete"
                    Clicked="OnDeleteButtonClicked" />
            <Button Text="Save"
                    Clicked="OnCancelButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>